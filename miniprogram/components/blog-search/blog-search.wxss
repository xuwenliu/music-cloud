.container {
    display    : flex;
    align-items: center;
    margin-left: 20rpx;
    position   : relative;
}

.bar {
    flex            : 1;
    height          : 68rpx;
    font-size       : 28rpx;
    border-radius   : 50rpx;
    background-color: #f5f5f5;
    padding-left    : 60rpx;
}

.search {
    background-color: #d43c43;
    color           : #fff;
    margin-left     : 20rpx;
    font-size       : 12rpx;
    font-weight     : normal;
}

.in-bar {
    color: #999;
}

.find {
    position : absolute;
    top      : 50%;
    color    : #9f9f9f;
    transform: translate(16rpx, -50%);
}