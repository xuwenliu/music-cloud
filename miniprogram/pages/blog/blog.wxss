.header {
    display         : flex;
    align-items     : center;
    padding         : 0 20rpx;
    background-color: #fff;
    height          : 100rpx;
    position        : fixed;
    top             : 0;
    left            : 0;
    width           : 100%;
    z-index         : 99;
    box-sizing      : border-box;
}

.publish-container {
    width          : 68rpx;
    height         : 68rpx;
    display        : flex;
    justify-content: center;
    align-items    : center;
}

.search-container {
    flex: 1;
}

.blog-list{
    margin-top: 120rpx;
    width: 100%;
}

.blog-panel{
    margin-bottom: 20rpx;
    box-sizing: border-box;
    box-shadow: 0 2px 1px -1px rgba(0,0,0,.2), 0 1px 1px 0 rgba(0,0,0,.14), 0 1px 3px 0 rgba(0,0,0,.12);
}