<view class="container">
    <!-- 头部 -->
    <view class="header">
        <view class="publish-container" bind:tap="onPublish">
            <text class="iconfont icon-fabu"></text>
        </view>
        <view class="search-container">
            <x-blog-search iconfont="iconfont" btn="btn" icon-search="icon-search" bind:search="onSearch" />
        </view>
    </view>
    <!-- 底部弹出层 -->
    <x-auth modalShow="{{modalShow}}" bind:authSuccess="authSuccess" bind:authFail="authFail"></x-auth>
    <!-- 博客卡片列表 -->
    <view class="blog-list">
        <block wx:for="{{blogList}}" wx:key="_id">
            <view class="blog-panel">
                <x-blog-card blog="{{item}}" data-blogid="{{item._id}}" bind:tap="goToComment" />
                <x-blog-ctrl blogId="{{item._id}}" />
            </view>
        </block>
    </view>
</view>